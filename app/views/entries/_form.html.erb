<%= form_with(model: entry, class: "border mb-3 p-3 flex items-start gap-2") do |f| %>
  <%= f.text_area :description, value: entry.description, class: "flex-grow border-gray-300 focus:ring-blue-500 focus:border-blue-500 h-10 py-2" %>
  <%= f.submit class: "border border-green-500 hover:bg-green-500 hover:text-white px-2" %>
  <%= link_to "Cancel", entries_path, class: "text-red-500 hover:text-red-600" %>
<% end %>