<div id="<%= dom_id entry %>" class="flex flex-col w-full">
  <p class="text-sm text-slate-600">
    Project: <%= entry.project %>
  </p>
  <div class="flex flex-row gap-2 border py-2 px-4" data-controller="timer" data-id="<%= entry.id %>">
    <div class="flex flex-row w-full gap-2">
      <div id="elapsed_time_<%= entry.id %>" class="text-2xl w-1/6"><%= formatted_elapsed_time(entry) %></div>
      <div class="w-5/6">
        <%= form_with(model: entry, class: "flex items-center gap-2") do |f| %>
          <%= f.text_area :description, value: entry.description, class: "flex-grow border border-slate-200 focus:ring-blue-500 focus:border-blue-500 h-20 py-2 text-sm" %>
          <%= f.submit class: "border border-green-500 hover:bg-green-500 hover:text-white px-2" %>
        <% end %>
      </div>
    </div>
    <div class="flex flex-row w-fit items-center">
      <svg
        id="play-<%= entry.id %>"
        data-action="click->timer#start"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 hover:fill-current hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
      </svg>
      <svg
        id="stop-<%= entry.id %>"
        data-action="click->timer#stop"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
      </svg>
    </div>
  </div>
</div>