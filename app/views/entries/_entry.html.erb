<div id="<%= dom_id entry %>">
  <p>
    <strong><%= entry.project %></strong>
  </p>
  <div class="text-2xl flex flex-row gap-2">
    <p id="elapsed_time_<%= entry.id %>"><%= formatted_elapsed_time(entry) %></p>
  </div>
  <p>
    <label>Description:</label>
    <%= entry.description %>
  </p>
</div>
<button
  type="button"
  id="timer-control-<%= entry.id %>"
  data-controller="timer"
  data-action=<%= timer_button_data_action(entry) %>
  data-id="<%= entry.id %>">
  <%= timer_button_action(entry) %>
</button>
