<div id="<%= dom_id entry %>" class="w-full">
  <p>
    <strong><%= entry.project %></strong>
  </p>
  <div class="text-2xl flex flex-row gap-2" data-controller="timer" data-id="<%= entry.id %>">
    <p id="elapsed_time_<%= entry.id %>"><%= formatted_elapsed_time(entry) %></p>
    <svg
      id="play-<%= entry.id %>"
      data-action="click->timer#start"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
    </svg>
    <svg
      id="stop-<%= entry.id %>"
      data-action="click->timer#stop"
      xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
    </svg>
  </div>
  <%= turbo_frame_tag "edit_entry_#{entry.id}" do %>
    <%= link_to edit_entry_path(entry.id) do %>
      <p class="text-sm text-slate-600">
        Description: <%= entry.description %>
      </p>
    <% end %>
  <% end %>
</div>